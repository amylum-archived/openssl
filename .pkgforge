name 'openssl'
org 'amylum'

deps(
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  'linux-api-headers': {
    version: '4.17-1',
    checksum: 'b2526797b346c73dc44da02dc16def8eb2059c02bd015f76497e9babadc1a44f'
  }
)


configure_flags(
  prefix: '/usr',
  libdir: 'lib',
  openssldir: '/etc/ssl'
)
remove_linker_archives
remove_pkgconfig_files

cflags
cflags ['-Wa,--noexecstack']
harden

#patch 'no-rpath.patch'
patch 'ca-dir.patch'
patch 'ld_library_path.patch'

build do
  env = default_env.merge('PATH' => "/usr/bin/core_perl:#{ENV['PATH']}")
  run "./Configure #{configure_flag_strings.join(' ')} no-async enable-ec_nistp_64_gcc_128 linux-x86_64 #{@forge.cflags.join(' ')}", env
  run "make DESTDIR=#{releasedir} MANDIR=/usr/share/man MANSUFFIX=ssl install", env
end

test do
  run 'openssl version'
end
